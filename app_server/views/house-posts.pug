extends layout
block content
  .row
    .col-12
      h1 #{title}
    each housepost in housePosts
      .col-12.col-lg-6
        .card.mb-3
          h3.card-header #{housepost.title} for #{housepost.days} Days.
          .card-body
              h5.card-subtitle Starting on the #{housepost.dateStart} <br> #{housepost.address}


          .row
            .col-md-6
              img.d-block.user-select-none(src=housepost.imageURL, width='100%', height='200', aria-label='Placeholder: House Image', focusable='false', role='img', preserveaspectratio='xMidYMid slice')
            .col-md-6
              h6.ps-3.card-subtitle Pets
              ul.list-group.list-group-flush
                li.list-group-item Dogs:
                  each dog in housepost.dogs
                    span.badge.rounded-pill.bg-primary.ms-1=dog
                li.list-group-item Cats:
                  each cat in housepost.cats
                    span.badge.rounded-pill.bg-primary.ms-1=cat
                li.list-group-item Other:
                  each other in housepost.others
                    span.badge.rounded-pill.bg-primary.ms-1=other

          .row.mt-2
            .col-12
              h6.ps-3.card-subtitle Job description:
              .card-body
                p.card-text=housepost.description

                a.card-link(href='#')
                  button.btn.btn-primary Request Interest.
              .card-footer.text-muted
                | Posted on #{housepost.dayPosted}, #{housepost.applicants} Applicants.
