extends layout

block content
  .container
    if (!user)
      h1 Login Page
    if (user)
      h1 Login Page
      p You are currently logged in as #{user.username}
        a.m-1(href="/logout") Logout
    br
    form(role='form', action="/login", method="post", style='max-width: 300px;')
      .form-group
          input.form-control(type='text', name="username", placeholder='Enter Username')
      .form-group
        input.form-control(type='password', name="password", placeholder='Password')
      button.btn.m-1.btn-primary(type='submit') Submit
      button.btn.m-1.btn-primary(type="reset") Cancel
